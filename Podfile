# Uncomment the next line to define a global platform for your project
platform :ios, '11.0'

target 'exmo-ios-client' do
  use_frameworks!
  
  # Crashlytics
  pod 'Firebase/Core'
  pod 'Fabric', '~> 1.9.0'
  pod 'Crashlytics', '~> 3.12.0'
  
  # JSON to Object and vice-versa
  pod 'ObjectMapper', '~> 3.1'
  pod 'SwiftyJSON', '~> 5.0'
  
  # Connection with Internet
  pod 'Alamofire', '~> 4.7'
  pod 'SwiftWebSocket'
  pod 'SwiftyStoreKit'

  # Admob
  pod 'Firebase/Core'
  pod 'Firebase/AdMob'

  # Security
  pod 'SmileLock', '~> 3.0'
  pod 'KeychainSwift', '~> 13.0'
  
  pod 'RealmSwift'
  pod 'Charts'

  pod 'LBTAComponents' # TODO: should remove from project
  
  # Rx Swift
  pod 'RxSwift', '~> 4.3.0'
  pod 'RxCocoa', '~> 4.3.0'
 
  # UI
  pod 'SnapKit', '~> 5.0.0'
  
end
